{
    "name": "joshcirre/tweakflux",
    "type": "library",
    "description": "Deep theming for Flux UI. Override Tailwind v4 CSS custom properties to transform every Flux component.",
    "keywords": [
        "laravel",
        "livewire",
        "flux",
        "theming",
        "tailwind"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Josh Cirre",
            "homepage": "https://github.com/joshcirre"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/console": "^11.0 || ^12.0",
        "illuminate/support": "^11.0 || ^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0 || ^10.0",
        "pestphp/pest": "^3.0 || ^4.0"
    },
    "autoload": {
        "psr-4": {
            "TweakFlux\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TweakFlux\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "TweakFlux\\TweakFluxServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
